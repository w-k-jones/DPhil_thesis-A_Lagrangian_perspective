	journal = {Geophysical Research Letters},
	author = {Rudlosky, Scott D. and Goodman, Steven J. and Virts, Katrina S. and Bruning, Eric C.},
	year = {2019},
	keywords = {Convection, Lightning, Geostationary, GLM, GOES, Satellite},
	pages = {1097--1104},
