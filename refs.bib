	month = apr,
	year = {2019},
	pages = {5331--5347},
	file = {Full Text PDF:/Users/jonesw/Zotero/storage/KMK6F2T3/Gryspeerdt et al. - 2019 - Constraining the aerosol influence on cloud liquid.pdf:application/pdf;Snapshot:/Users/jonesw/Zotero/storage/GS6MZCVN/2019.html:text/html}
