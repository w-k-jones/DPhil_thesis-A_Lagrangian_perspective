	number = {2},
	urldate = {2022-05-05},
	journal = {Earth System Science Data},
	author = {Li, Jianfeng and Feng, Zhe and Qian, Yun and Leung, L. Ruby},
	month = mar,
	year = {2021},
	note = {Publisher: Copernicus GmbH},
	pages = {827--856},
	file = {Full Text PDF:/Users/jonesw/Zotero/storage/JMDB3GRJ/Li et al. - 2021 - A high-resolution unified observational data produ.pdf:application/pdf;Snapshot:/Users/jonesw/Zotero/storage/4KBQP6FR/2021.html:text/html},
}


