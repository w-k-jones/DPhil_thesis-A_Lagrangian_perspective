  langid = {english},
  file = {/Users/jonesw/Zotero/storage/I24D9KQM/Heymsfield and Miloshevich - 1993 - Homogeneous Ice Nucleation and Supercooled Liquid .pdf}
}

@article{hoose_heterogeneous_2012,
  title = {Heterogeneous Ice Nucleation on Atmospheric Aerosols: A Review of Results from Laboratory Experiments},
