	author = {Romps, David M.},
	month = sep,
	year = {2015},
	note0 = {Publisher: American Meteorological Society
Section: Journal of the Atmospheric Sciences},
	pages = {3639--3646},
	file = {Full Text PDF:/Users/jonesw/Zotero/storage/6K3ZK83N/Romps - 2015 - MSE Minus CAPE is the True Conserved Variable for .pdf:application/pdf},
