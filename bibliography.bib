  author = {Brooks, Harold E. and Doswell III, Charles A. and Zhang, Xiaoling and Chernokulsky, A. M. Alexander and Tochimoto, Eigo and Hanstrum, Barry and {de Lima Nascimento}, Ernani and Sills, David M. L. and Antonescu, Bogdan and Barrett, Brad},
