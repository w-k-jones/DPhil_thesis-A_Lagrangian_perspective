@article{feng_spatiotemporal_2019,
  title = {Spatiotemporal {{Characteristics}} and {{Large-Scale Environments}} of {{Mesoscale Convective Systems East}} of the {{Rocky Mountains}}},
  author = {Feng, Zhe and Houze, Robert A. and Leung, L. Ruby and Song, Fengfei and Hardin, Joseph C. and Wang, Jingyu and Gustafson, William I. and Homeyer, Cameron R.},
  year = {2019},
  month = jul,
  journal = {Journal of Climate},
  volume = {32},
